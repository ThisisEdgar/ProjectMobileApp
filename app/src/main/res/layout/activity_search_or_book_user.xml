<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchOrBookUser">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/providerList"
        android:layout_width="243dp"
        android:layout_height="0dp"
        android:layout_marginBottom="71dp"
        app:layout_constraintBottom_toTopOf="@+id/btnBook_SBU"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_SBU" />

    <Button
        android:id="@+id/btnBook_SBU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="34dp"
        android:text="@string/book_SOBU"
        app:layout_constraintBottom_toTopOf="@+id/btnBack_SBU"
        app:layout_constraintStart_toStartOf="@+id/providerList"
        app:layout_constraintTop_toBottomOf="@+id/providerList" />

    <Button
        android:id="@+id/btnBack_SBU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="63dp"
        android:text="@string/back_SOBU"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBook_SBU" />

    <TextView
        android:id="@+id/title_SBU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="33dp"
        android:text="@string/title_SOBU"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/providerList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>